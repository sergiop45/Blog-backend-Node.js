<%- include('../../partials/header.ejs') %>

<%- include('../../partials/navbar.ejs')%>

<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/update" method="post">
                <input type="hidden" name="id" value="<%= article.id %>">
                <input class="form-control" value="<%= article.title %>" type="text" placeholder="Titulo do artigo" name="title" >
                <br>
                <textarea id="article" class="form-control" name="body" ><%= article.body %></textarea>
                <br>
                <select class="form-select" name="category">
                    <% category.forEach((categoria) => { %>
                        <option value="<%= categoria.id %>"><%= categoria.title %></option>
                    <% }) %>    
                </select>
                <br>
                <br>
                <button class="btn btn-success">Editar</button>
            </form>
        </div>
    </div>
</div>


<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
        tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        force_br_newlines : false,
        force_p_newlines : false,
        forced_root_block : '',
        plugins: 'advlist autolink link image lists print preview hr searchplace wordcount fullscreen' 
    });

</script>